<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_SIMPLEFILEMANAGER_DOCUMENT_VIEW_DEFAULT_TITLE" option="COM_SIMPLEFILEMANAGER_DOCUMENT_VIEW_DEFAULT_OPTION">
        <help
            key = "JHELP_MENUS_MENU_ITEM_DOCUMENT_SINGLE_DOCUMENT"
        />
        <message>
			<![CDATA[COM_SIMPLEFILEMANAGER_DOCUMENT_VIEW_DEFAULT_DESC]]>
        </message>
    </layout>

    <!-- Add fields to the request variables for the layout. -->
    <fields name="request">
        <fieldset name="request"
                  addfieldpath="/administrator/components/com_simplefilemanager/models/fields"
        >
            <field
                name="id"
                type="sql"
                class="inputbox"
                required="true"
                label="COM_SIMPLEFILEMANAGER_SELECT_DOCUMENT_LABEL"
                description="COM_SIMPLEFILEMANAGER_SELECT_DOCUMENT_DESC"				
                query="SELECT id, CONCAT('[',id,'] ',title) as name FROM #__simplefilemanager"
                key_field="id"
                value_field="name"
                select="true"
                new="true"
                edit="true"
                clear="true"
            />
        </fieldset>
    </fields>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">

        <!-- Basic options. -->
        <fieldset name="params"
                  label="COM_SIMPLEFILEMANAGER_BASIC_OPTIONS_FIELDSET_LABEL"
                  addfieldpath="/administrator/components/com_fields/models/fields"
        >
