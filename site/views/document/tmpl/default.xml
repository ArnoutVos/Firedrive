                    <option value="plain">COM_SIMPLEFILEMANAGER_FIELD_VALUE_PLAIN</option>
            </field> -->

            <field 
                name="show_document_category"
                type="list"
                label="COM_SIMPLEFILEMANAGER_FIELD_DOCUMENT_SHOW_CATEGORY_LABEL"
                description="COM_SIMPLEFILEMANAGER_FIELD_DOCUMENT_SHOW_CATEGORY_DESC"
                useglobal="true"
                class="chzn-color"
            >
                <option value="hide">JHIDE</option>
                <option value="show_no_link">COM_SIMPLEFILEMANAGER_FIELD_VALUE_NO_LINK</option>
                <option value="show_with_link">COM_SIMPLEFILEMANAGER_FIELD_VALUE_WITH_LINK</option>
            </field>

            <field
                name="show_tags"
                type="list"
                label="COM_SIMPLEFILEMANAGER_FIELD_SHOW_TAGS_LABEL"
                description="COM_SIMPLEFILEMANAGER_FIELD_SHOW_TAGS_DESC"
                useglobal="true"
