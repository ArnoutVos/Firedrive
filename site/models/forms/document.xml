<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="document" addrulepath="components/com_simplefilemanager/models/rules" label="COM_SIMPLEFILEMANAGER_DOCUMENT_DEFAULT_LABEL">
		<field
			name="spacer"
			type="spacer"
			label="COM_SIMPLEFILEMANAGER_DOCUMENT_REQUIRED"
			class="text"
		/>

		<field
			name="document_name"
			type="text"
			label="COM_SIMPLEFILEMANAGER_DOCUMENT_EMAIL_NAME_LABEL"
			description="COM_SIMPLEFILEMANAGER_DOCUMENT_EMAIL_NAME_DESC"
			id="document-name"
			size="30"
			filter="string"
			required="true"
		/>

		<field
			name="document_email"
			type="email"
			label="COM_SIMPLEFILEMANAGER_EMAIL_LABEL"
			description="COM_SIMPLEFILEMANAGER_EMAIL_DESC"
			id="document-email"
			size="30"
			filter="string"
			validate="documentemail"
			autocomplete="email"
			required="true"
		/>

		<field
			name="document_subject"
			type="text"
			label="COM_SIMPLEFILEMANAGER_DOCUMENT_MESSAGE_SUBJECT_LABEL"
			description="COM_SIMPLEFILEMANAGER_DOCUMENT_MESSAGE_SUBJECT_DESC"
			id="document-emailmsg"
			size="60"
			filter="string"
			validate="documentemailsubject"
			required="true"
		/>

		<field
			name="document_message"
			type="textarea"
			label="COM_SIMPLEFILEMANAGER_DOCUMENT_ENTER_MESSAGE_LABEL"
			description="COM_SIMPLEFILEMANAGER_DOCUMENT_ENTER_MESSAGE_DESC"
			cols="50"
			rows="10"
			id="document-message"
			filter="safehtml"
			validate="documentemailmessage"
			required="true"
		/>

		<field
			name="document_email_copy"
			type="checkbox"
			label="COM_SIMPLEFILEMANAGER_DOCUMENT_EMAIL_A_COPY_LABEL"
			description="COM_SIMPLEFILEMANAGER_DOCUMENT_EMAIL_A_COPY_DESC"
			id="document-email-copy"
			default="0"
		/>
	</fieldset>

	<fieldset name="captcha">
		<field
			name="captcha"
			type="captcha"
			label="COM_SIMPLEFILEMANAGER_CAPTCHA_LABEL"
			description="COM_SIMPLEFILEMANAGER_CAPTCHA_DESC"
			validate="captcha"
			namespace="document"
		/>
	</fieldset>
</form>
